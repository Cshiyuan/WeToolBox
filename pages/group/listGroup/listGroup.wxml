<!--pages/group/listGroup/listGroup.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">我的群列表</view>
        <!-- <view class="page__desc">列表</view> -->
    </view>
    <view class="page__bd">

        <!-- <view class="weui-cells__title">带图标、说明、跳转的列表项</view> -->
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <block wx:for="{{groupList}}" wx:for-item="group" wx:for-index="groupIndex" wx:key="id">
                <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" data-index="{{groupIndex}}" catchtap="jumpToIndexGroup" style="min-height:24px;">
                    <open-data class="weui-cell__bd" type="groupName" open-gid="{{group.openg_id}}" ></open-data>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </view>
            </block>
        </view>
    </view>
</view>
<!--pages/activity/punchActivity/punchActivity.wxml-->
<!-- 地图 -->
<map id="map" longitude="{{markers[0].longitude}}" latitude="{{markers[0].latitude}}" scale="17" markers="{{markers}}" circles="{{circles}}"
    style="width: 100%; height: 300px;" show-location="true"></map>


<view class="weui-panel weui-panel_access">
    <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">{{activity.title}}</view>
            <view class="weui-media-box__desc" style="display:inline;">{{activity.description}}</view>
            <view class="weui-media-box__info">
                <view class="weui-media-box__info__meta">开始时间：{{startTimeStr}}</view>
            </view>
        </view>
    </view>
</view>

<view class="weui-cells">
    <!-- 报名列表 -->
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="naviToMemberList">
        <view class="weui-cell__bd">报名列表</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="padding-right:50rpx;">
            <block wx:for="{{activity.signUpList}}" wx:for-item="item" wx:for-index="itemIndex" wx:key="itemIndex">
                <view class="weui-grid" style="padding:0;border:0; width:22px;">
                    <image class="weui-grid__icon" style="border:3px solid white;border-radius:28px;" src="https://wx.qlogo.cn/mmopen/vi_32/UbnPnFq4libmxNRDeS3QzXtXQUp54sVoaqIeupy7OkjJSe7pumvzPWp3Flm7ZeuRZpeYb8oaMOB0RXzfgyjXLNA/0"
                    />
                </view>
            </block>
        </view>
    </view>
    <!-- 打卡列表 -->
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="naviToMemberList">
        <view class="weui-cell__bd">打卡列表</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="padding-right:50rpx;">
            <block wx:for="{{activity.punchList}}" wx:for-item="item" wx:for-index="itemIndex" wx:key="itemIndex">
                <view class="weui-grid" style="padding:0;border:0; width:22px;">
                    <image class="weui-grid__icon" style="border:3px solid white;border-radius:28px;" src="https://wx.qlogo.cn/mmopen/vi_32/UbnPnFq4libmxNRDeS3QzXtXQUp54sVoaqIeupy7OkjJSe7pumvzPWp3Flm7ZeuRZpeYb8oaMOB0RXzfgyjXLNA/0"
                    />
                </view>
            </block>
        </view>
    </view>
    <!-- 设置入口 -->
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="naviToSetting">
        <view class="weui-cell__bd">设置</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
</view>

<view class="page__bd_spacing" style="margin-top: 50rpx;margin-bottom:50rpx;padding-bottom:50rpx;">
    <button wx:if="{{!activity.isSignUp}}"  class="weui-btn" type="warn" bindtap="signUpActivity">报名 {{wxTimer}}</button>
    <button wx:if="{{activity.isSignUp && ! activity.isPunch}}" class="weui-btn" disabled="{{!isAlreadyStart}}" type="warn" bindtap="punchActivity">签到 {{wxTimer}}</button>
</view>
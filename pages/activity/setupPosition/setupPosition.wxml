<!--pages/activity/setupPosition/setupPosition.wxml-->
<map id="map" longitude="113.324520" latitude="23.099994" scale="17" markers="{{markers}}" circles="{{circles}}" bindmarkertap="markerTap"
    show-location style="width: 100%; height: 300px;" bindtap="mapTap"></map>


<!-- 查找标题 -->
<view class="weui-cells__title">活动标题</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
            <input class="weui-input" placeholder="输入关键字" bindinput="bindKeyInput" />
        </view>
    </view>
</view>

<!-- 范围 -->
<view class="weui-cells__title">允许打卡范围</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <slider show-value min="50" max="200" step="50" value="100" bindchange="sliderChange" />
        </view>
    </view>
</view>
<!--pages/activity/publishActivity/publishActivity.wxml-->


<view class="weui-cells__title">活动标题</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入文本" />
        </view>
    </view>
</view>

<view class="weui-cells__title">活动说明</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输入文本" style="height: 3.3em" />
            <view class="weui-textarea-counter">0/200</view>
        </view>
    </view>
</view>


<view class="weui-cells__title">设置</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">地点</view>
        </view>
        <view class="weui-cell__bd">
                <view class="weui-select weui-select_in-select-after">沙头角中学</view>
        </view>
    </view>
    <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">时间</view>
        </view>
        <view class="weui-cell__bd">
                <view class="weui-select weui-select_in-select-after">12:30</view>
        </view>
    </view>
</view>
<!--pages/activity/publishActivity/publishActivity.wxml-->


<view class="page">

    <view class="page__bd ">

        <!-- 标题 -->
        <view class="weui-cells__title">活动标题</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入文本" />
                </view>
            </view>
        </view>

        <!-- 说明 -->
        <view class="weui-cells__title">活动说明</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入文本" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>

        <!-- 设置 -->
        <view class="weui-cells__title">设置</view>
        <view class="weui-cells weui-cells_after-title">

            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="{{toDay}}"  bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>

            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="{{nowTime}}"  bindchange="bindTimeChange">
                        <view class="weui-input">{{time}}</view>
                    </picker>
                </view>
            </view>

            <view class="weui-cell weui-cell_select" bindtap="toSetUpPosition">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">地点</view>
                </view>
                <view class="weui-cell__bd">
                    <view class="weui-select weui-select_in-select-after">沙头角中学</view>
                </view>
            </view>
        </view>

        <view class="page__bd_spacing" style="margin-top: 50rpx">
            <button class="weui-btn" type="primary">发布活动</button>
            <!-- <button class="weui-btn" type="primary" disabled="true">页面主操作 Disabled</button> -->
        </view>

    </view>

</view>